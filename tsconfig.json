{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "removeComments": false,
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react",
        "skipDefaultLibCheck": true,
        "declaration": true,
        "pretty": true,
        "strict": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "lib": ["dom", "dom.iterable", "es6"],
        "types": ["jest"],
        "typeRoots": ["./node_modules/@types"],
        "plugins": [{ "name": "tslint-language-service" }]
    },
    "exclude": ["node_modules", "dist", "@types", "__tests__", "tools", "examples"]
}
