{
    "name": "simplr-dropdown",
    "version": "3.1.1",
    "description": "A flexible React dropdown component.",
    "types": "./dist/index.d.ts",
    "main": "./dist/simplr-dropdown.js",
    "scripts": {
        "pretest": "tsc -p . --noEmit && tslint -p .",
        "test": "jest",
        "test-ci": "npm run test -- --maxWorkers=4",
        "coveralls": "coveralls < coverage/lcov.info",
        "build": "rollup -c",
        "postbuild": "rimraf ./dist/**/__tests__/",
        "watch": "rollup -c -w",
        "docs-gen": "ts-docs-gen --entryFile ./src/index.ts"
    },
    "keywords": [
        "react",
        "dropdown",
        "flexible",
        "component"
    ],
    "author": "simplrjs <simplr@quatrodev.com> (https://github.com/simplrjs)",
    "bugs": "https://github.com/SimplrJS/simplr-dropdown/issues",
    "repository": "SimplrJS/simplr-dropdown",
    "homepage": "https://github.com/SimplrJS/simplr-dropdown",
    "license": "MIT",
    "files": [
        "dist",
        "**/*.md",
        "@types"
    ],
    "devDependencies": {
        "@types/enzyme": "^3.1.9",
        "@types/enzyme-adapter-react-16": "^1.0.2",
        "@types/jest": "^22.2.0",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "jest": "^22.4.2",
        "coveralls": "^3.0.0",
        "jest-environment-jsdom": "^22.4.1",
        "jest-enzyme": "^4.2.0",
        "rimraf": "^2.6.2",
        "rollup": "^0.56.4",
        "rollup-plugin-auto-external": "^1.2.0",
        "rollup-plugin-typescript2": "^0.11.1",
        "rollup-plugin-uglify": "^3.0.0",
        "simplr-tslint": "^1.0.0-alpha.9",
        "ts-docs-gen": "^0.2.0",
        "ts-jest": "^22.4.1",
        "tslint": "^5.9.1",
        "tslint-language-service": "^0.9.8",
        "typescript": "^2.7.2"
    },
    "dependencies": {
        "@types/prop-types": "^15.5.2",
        "@types/react": "^16.0.40",
        "@types/react-dom": "^16.0.4",
        "prop-types": "^15.6.1",
        "react": "^16.2.0",
        "react-dom": "^16.2.0"
    },
    "jest": {
        "setupTestFrameworkScriptFile": "./__tests__/tests-configuration.ts",
        "collectCoverage": true,
        "collectCoverageFrom": [
            "!src/index.ts",
            "src/**/*.{ts,tsx}",
            "!*",
            "!**/__tests__/**/*"
        ],
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "globals": {
            "ts-jest": {
                "skipBabel": true,
                "tsConfigFile": "./tsconfig.json"
            }
        },
        "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    }
}
